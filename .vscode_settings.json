{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.formatOnType": true
    },
    "black-formatter.args": [
        "--line-length",
        "120"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit",
        "source.sortMembers": "explicit"
    },
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.inlineSuggest.enabled": true,
    "editor.mouseWheelZoom": true,
    "editor.fontSize": 12, // Increase editor font size
    "terminal.integrated.fontSize": 12, // Increase terminal font size
    "files.autoSave": "afterDelay",
    "files.exclude": {
        "**/*.egg-info": true,
        "**/.ipynb_checkpoints": true,
        "**/__pycache__": true
    },
    "github.copilot.enable": {
        "*": true,
        "markdown": true,
        "plaintext": true,
        "scminput": false,
        "yaml": true
    },
    "isort.args": [
        "--profile",
        "black",
        "--filter-files"
    ],
    "jupyter.askForKernelRestart": false,
    "jupyter.debugJustMyCode": false,
    "jupyter.showVariableViewWhenDebugging": true,
    "notebook.output.textLineLimit": 1000,
    "redhat.telemetry.enabled": true,
    "security.workspace.trust.enabled": false,
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "terminal.integrated.inheritEnv": false,
    "window.commandCenter": true,
    "workbench.editor.enablePreview": false,
    "workbench.editor.wrapTabs": false,
    "workbench.tree.indent": 28,
    "terminal.integrated.defaultProfile.linux": "bash",
    "editor.rulers": [
        80,
        120
    ],
    "github.copilot.editor.enableAutoCompletions": true,
    "diffEditor.hideUnchangedRegions.enabled": true,
    "workbench.colorTheme": "One Dark Pro",
    "editor.tokenColorCustomizations": {
        "[One Dark Pro]": {
            "textMateRules": [
                {
                    "scope": [
                        // "variable",
                        "variable.other.readwrite",
                        // "variable.parameter"
                    ],
                    "settings": {
                        "foreground": "#faf9f99e"
                    }
                },
                // {
                //     "scope": "variable.function",
                //     "settings": {
                //         "foreground": "#ffffffab"
                //     }
                // }
            ]
        }
    }
}